<h1>Update Account</h1>
<%- messages() %>

<!-- Account Update Form -->
<form action="/account/update" method="post">
  <label>First Name</label>
  <input type="text" name="account_firstname" value="<%= account.account_firstname %>" required>

  <label>Last Name</label>
  <input type="text" name="account_lastname" value="<%= account.account_lastname %>" required>

  <label>Email</label>
  <input type="email" name="account_email" value="<%= account.account_email %>" required>

  <input type="hidden" name="account_id" value="<%= account.account_id %>">
  <button type="submit">Update Account</button>
</form>

<!-- Change Password Form -->
<form action="/account/update-password" method="post">
  <label>New Password</label>
  <input type="password" name="account_password" required>
  <p>Password must be at least 8 characters, include a number and a symbol.</p>

  <input type="hidden" name="account_id" value="<%= account.account_id %>">
  <button type="submit">Change Password</button>
</form>