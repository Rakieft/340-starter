<h1><%= title %></h1>

<%- messages() %>

<% if (errors) { %>
<ul class="errors">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<form id="updateForm" action="/inv/update" method="post">
  <label>Classification</label>
  <%- classificationSelect %>

  <label>Make</label>
  <input type="text" name="inv_make" required value="<%= inv_make || '' %>">

  <label>Model</label>
  <input type="text" name="inv_model" required value="<%= inv_model || '' %>">

  <label>Year</label>
  <input type="number" name="inv_year" required value="<%= inv_year || '' %>">

  <label>Price</label>
  <input type="number" step="0.01" name="inv_price" required value="<%= inv_price || '' %>">

  <label>Miles</label>
  <input type="number" name="inv_miles" required value="<%= inv_miles || '' %>">

  <label>Color</label>
  <input type="text" name="inv_color" required value="<%= inv_color || '' %>">

  <label>Image Path</label>
  <input type="text" name="inv_image" required value="<%= inv_image || '/images/vehicles/no-image.png' %>">

  <label>Thumbnail Path</label>
  <input type="text" name="inv_thumbnail" required value="<%= inv_thumbnail || '/images/vehicles/no-image-tn.png' %>">

  <label>Description</label>
  <textarea name="inv_description" required><%= inv_description || '' %></textarea>

  <input type="hidden" name="inv_id" value="<%= inv_id %>">

  <button type="submit" id="updateBtn" disabled>Update Vehicle</button>
</form>

<script src="/js/inv-update.js"></script>